@using App.Data.Entities
@model ProductDTO

@{
    ViewData["Title"] = "Update Product";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label for="SellerId">Seller</label>
            <input type="number" id="SellerId" name="SellerId" class="form-control" value="@Model.SellerId" required />
        </div>
        <div class="form-group">
            <label for="CategoryId">Category</label>
            <select id="CategoryId" name="CategoryId" class="form-control" required>
                <option value="">Select Category</option>
                @foreach (var category in ViewBag.Categories as List<CategoryEntity>)
                {
                    <option value="@category.Id" >
                        @category.Name
                    </option>




                }
            </select>
        </div>

        <div class="form-group">
            <label for="DiscountId">Discount (Optional)</label>
            <select id="DiscountId" name="DiscountId" class="form-control">
                <option value="">Select Discount</option>
                @foreach (var discount in ViewBag.Discounts as List<DiscountEntity>)
                {
                    <option value="@discount.Id" >@discount.DiscountRate
                    </option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="Name">Product Name</label>
            <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
        </div>

        <div class="form-group">
            <label for="Price">Price</label>
            <input type="number" step="0.01" id="Price" name="Price" class="form-control" value="@Model.Price"
                required />
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <textarea id="Description" name="Description" class="form-control" required>@Model.Description</textarea>
        </div>

        <div class="form-group">
            <label for="StockAmount">Stock Amount</label>
            <input type="number" id="StockAmount" name="StockAmount" class="form-control" value="@Model.StockAmount"
                required />
        </div>

        <div class="form-group form-check">
            <input type="checkbox" id="Enabled" name="Enabled" class="form-check-input" @(Model.Enabled ? "checked" :
                "") />
            <label for="Enabled" class="form-check-label">Enabled</label>
        </div>

        <button type="submit" class="btn btn-primary">Update Product</button>
    </form>
</div>
