@model BlogListViewModel
<div class="page-content">	
		<!--Banner Start-->
		<div class="dz-bnr-inr" style="background-image:url(images/background/bg1.jpg);">
			<div class="container">
				<div class="dz-bnr-inr-entry">
					<nav aria-label="breadcrumb" class="breadcrumb-row">
						<ul class="breadcrumb">
							<li class="breadcrumb-item"><a href="index.html"> Home</a></li>
							<li class="breadcrumb-item">Blog</li>
						</ul>
					</nav>
				</div>
			</div>	
		</div>
		<!--Banner End-->

		<section class="content-inner-1 z-index-unset">
			<div class="container">
				<div class="row">
                    @foreach(var blog in Model.blogEntities)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-6 m-b30 wow fadeInUp" data-wow-delay="0.1s">
						<div class="dz-card blog-half style-5">
							<div class="dz-media">
								<img src="https://picsum.photos/945/435" alt="/">
							</div>
							<div class="dz-info">
								<div class="dz-meta">
									<ul>
										<li class="post-date">@blog.CreatedAt.ToString("dd MMM yyyy")</li>
									</ul>
								</div>
								<h3 class="dz-title">
									<a href="blog-both-sidebar.html">@blog.Title</a>
								</h3>
								<a href="@Url.Action("BlogPost","Blog", new {id = blog.Id})" class="font-14 read-btn">Okumaya devam et
									<i class="icon feather icon-chevron-right"></i>
								</a>
							</div>
						</div>
					</div>
                    }
					
				</div>
			</div>
		</section>

		<!-- Newsletter Start-->
		@Html.Partial("~/Views/Partials/NewsLetter.cshtml")
	<!-- Newsletter End -->
		
	</div>