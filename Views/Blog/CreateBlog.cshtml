@model BlogDTO

<h1>Yeni Blog Yazısı Ekle</h1>

<form asp-action="CreateBlog" method="post">
    <div class="form-group">
        <label for="Title">Başlık</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
    </div>

    <div class="form-group">
        <label for="Content">İçerik</label>
        <textarea class="form-control" id="Content" name="Content" rows="5" required>@Model.Content</textarea>
    </div>

    <div class="form-group">
        <label for="ImageUrl">Resim URL</label>
        <input type="text" class="form-control" id="ImageUrl" name="ImageUrl" value="@Model.ImageUrl" />
    </div>
    <div class="form-group">
        <input type="hidden" class="form-control" id="UserId" name="userId" value="@Model.userId" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
