@{
    ViewData["Title"] = "Password Reset Request Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="alert alert-success">
                <h4 class="alert-heading">Password Reset Request Received</h4>
                <p>Your password reset request has been successfully received. Please check your email inbox for a link to reset your password.</p>
                <hr>
                <p class="mb-0">If you don't see the email in your inbox, please check your spam folder. If you continue to have issues, <a href="@Url.Action("Contact", "Home")">contact us</a>.</p>
            </div>

            <div class="text-center">
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Go to Login</a>
            </div>
        </div>
    </div>
</div>
