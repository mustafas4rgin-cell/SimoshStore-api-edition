@using App.Data.Entities
@model List<BlogCategoryEntity>

@{
    ViewBag.Title = "Ürün Listesi";
}
<a href="@Url.Action("Admin","AdminDashboard")">Admin Paneli</a>
<h2>Ürün Listesi</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
         @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <form method="post" action="@Url.Action("DeleteBlogCategory", "Blog")" 
                          onsubmit="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                        <input type="hidden" name="id" value="@category.Id" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>

                    |
                    <a href="@Url.Action("UpdateBlogCategory", "Blog", new { id = @category.Id })" class="btn btn-warning">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
