@using App.Data.Entities
@model List<ProductEntity>
<div class="clearfix">
				<ul id="masonry" class="row g-xl-4 g-3">
					@foreach(var product in Model)
					{
						<li class="card-container col-6 col-xl-3 col-lg-3 col-md-4 col-sm-6 herbs wow fadeInUp" data-wow-delay="0.6s">
						<div class="shop-card ">
							<div class="dz-media">
								<img src="https://picsum.photos/600/600" alt="image">
								<div class="shop-meta">
									<a href="@Url.Action("AddToCart","Cart", new {productId = product.Id,quantity = 1})"id="addToCartBtn3">
										<div class="btn btn-primary meta-icon dz-carticon")">
										<i class="flaticon flaticon-basket"></i>
										<i class="flaticon flaticon-basket-on dz-heart-fill"></i>
									</div>
									</a>
									
								</div>
							</div>
							<div class="dz-content">
								<h2 class="title"><a href="@Url.Action("ProductList", "Shop")">@product.Name</a></h2>
								@if(product.Discount is not null)
								{
									var newPrice = product.Price - (product.Price * product.Discount.DiscountRate / 100);
									<span class="price">
									$@newPrice
									<del>$@product.Price</del>
									</span>
								}
								else{
									<span class="price">
									$@product.Price
									</span>
								}
								
							</div>
						</div>	
					</li>
					}
				</ul>
			</div>