@using App.Data.Entities
@model List<CategoryEntity>

@{
    ViewData["Title"] = "Category List";
}


<div class="container">
    <h2>@ViewData["Title"]</h2>
    @if(ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
    <a href="@Url.Action("CreateCategory", "AdminCategory")" class="btn btn-primary mb-3">Add New Category</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Category Name</th>
                <th>Color</th>
                <th>IconCssClass</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Color</td>
                    <td>@category.IconCssClass</td>
                    <td>
                        <a href="@Url.Action("UpdateCategory", "Category", new { id = category.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("DeleteCategory", "Category", new { id = category.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
