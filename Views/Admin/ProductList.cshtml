@using App.Data.Entities
@model List<ProductEntity>

@{
    ViewData["Title"] = "Product List";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <a href="@Url.Action("CreateProduct", "Product")" class="btn btn-primary mb-3">Add New Product</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Category.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.StockAmount</td>
                    <td>
                        <a href="@Url.Action("UpdateProduct", "Product", new { id = product.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("DeleteProduct", "Product", new { id = product.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
